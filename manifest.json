{
    "manifest_version": 2,

    "name": "YouTube Tracks",
    "description": "YouTube tracklist navigation.",
    "version": "1.1.3",

    "applications": {
            "gecko": {
            "id": "youtube-tracks@ris58h"
        }
    },

    "permissions": [
        "storage"
    ],

    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },

    "options_ui": {
        "page": "options.html"
    },

    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["settings.js", "content.js"],
            "css": ["page.css"]
        }
    ]
}
